<h1>Listing songs</h1>
only favorites: <%= check_box_tag :favorites_switch %>
<p></p>

<table>
  <tr>
    <th>Song</th>
    <th>Favorite</th>
    <th>Album</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.song_name %></td>
    <td><%= song.favorite %></td>
    <td><%= Album.find(song.album_id).album_name %></td>
    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

